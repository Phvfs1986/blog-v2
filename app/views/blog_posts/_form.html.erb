<div class="container">
  <div class="text-center">
    <%= form_with model: blog_post do |form| %>
      <% if form.object.errors.any? %>
        <div>
          <% form.object.errors.full_messages.each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      <% end %>
      <div class="max-w-xl mx-auto p-1 pr-0 flex flex-wrap items-center">
        <%= form.text_field :title, placeholder: "Title", class: "flex-1 mt-4 appearance-none border border-gray-400 rounded shadow-md p-3 text-gray-600 mr-2 focus:outline-none" %>
      </div>

      <div class="max-w-xl mx-auto p-1 pr-0 flex flex-wrap items-center">
        <%= form.text_area :body, placeholder: "Message", class: "flex-1 mt-4 appearance-none border border-gray-400 rounded shadow-md p-3 text-gray-600 mr-2 focus:outline-none"  %>
      </div>

      <div class="max-w-xl mx-auto p-2 pr-4 flex flex-wrap items-center">
        <%= form.button class: "flex-1 mt-4 block md:inline-block appearance-none bg-green-500 text-white text-base font-semibold tracking-wider uppercase py-4 rounded shadow hover:bg-green-400" %>
      </div>
    <% end %>
  </div>
</div>